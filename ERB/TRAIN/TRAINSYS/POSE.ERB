	SELECTCASE ARGS:0
		CASE "자유"
			TCVAR:ARG:자세 = 0
		CASE "仰向", "누움"
			TCVAR:ARG:자세 = 1
			;누움処理もついでにやっちゃう
			TFLAG:누움 = 2
		CASE "앉다"
			TCVAR:ARG:자세 = 2
		CASE "四這", "네발로 엎드림"
			TCVAR:ARG:자세 = 3
		CASE "기립"
			TCVAR:ARG:자세 = 4
		CASE "膝立", "무릎으로 서있다"
			TCVAR:ARG:자세 = 10
		CASE "전회"
