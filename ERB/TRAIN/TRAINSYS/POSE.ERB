;────────────────────────────────────
;MASTERの体勢
@MASTER_POSE
;자세関連のTCVARを初期化する
;eratohoぱ。等の実装と違って、前の자세を考慮はしない路線
;　　だったのですが、メッセージ表示の上でのみ考慮することに変更
;────────────────────────────────────

;-------------------------------------------------
;ACT前자세변화処理
;-------------------------------------------------

;강제탈의が発生していれば자세を보정
IF TFLAG:강제탈의
	;전회의자세によって보정
	SELECTCASE TCVAR:MASTER:자세
		;네발로 엎드림は자유に戻す
		CASE 3
			CALL SET_POSE(MASTER, "자유")
		;무릎으로 서있다は座らせる
		CASE 10
			CALL SET_POSE(MASTER, "앉다")
	ENDSELECT
		;他は継続する
ENDIF

;자주탈의が発生していれば位置をリセット
IF TFLAG:자주탈의
	CALL SET_POSE(TARGET, "자유", "無効", "無効")
ENDIF

;-------------------------------------------------
;ACT直前処理
;-------------------------------------------------

;現在の位置情報を전회의位置へ格納
TCVAR:MASTER:전회의자세 = TCVAR:MASTER:자세
TCVAR:MASTER:전회의위치전후 = TCVAR:MASTER:위치전후
TCVAR:MASTER:전회의위치상하 = TCVAR:MASTER:위치상하

;一度初期化する
CALL SET_POSE(MASTER, "자유")
CALL SET_POSE(TARGET, "자유", "無効", "無効")
TCVAR:MASTER:REACT자세변화 = 0

;-------------------------------------------------
;ACT直前処理
;-------------------------------------------------

;체력限界なら누움
IF BASE:MASTER:체력 <= 0
	CALL SET_POSE(MASTER, "仰向")
	CALL CONDITION_POSE("체력", MASTER, "仰向")
ENDIF

;죠교대상자위중
IF GETBIT(TEQUIP:자위중, 0)
	CALL SET_USE(MASTER, "Ｐ", MASTER, "손")
	CALL CONDITION_USE("M자위", MASTER, "Ｐ", MASTER, "손")
ENDIF

;안면승마中
IF TEQUIP:안면승마
	CALL SET_USE(MASTER, "입", TARGET, "Ｖ")
	CALL CONDITION_USE("TM안면승마V", MASTER, "입", TARGET, "Ｖ")
	CALL SET_POSE(MASTER, "仰向")
	CALL CONDITION_POSE("TM안면승마V", MASTER, "仰向")
ENDIF
IF TEQUIP:안면승마항문
	CALL SET_USE(MASTER, "입", TARGET, "Ａ")
	CALL CONDITION_USE("TM안면승마A", MASTER, "입", TARGET, "Ｖ")
	CALL SET_POSE(MASTER, "仰向")
	CALL CONDITION_POSE("TM안면승마A", MASTER, "仰向")
ENDIF

;Ｃ애무
IF TEQUIP:죠교대상Ｃ사용 == 1
	CALL SET_USE(MASTER, "Ｐ", TARGET, "손")
	CALL CONDITION_USE("TM안면승마A", MASTER, "Ｐ", TARGET, "손")
ENDIF
IF TEQUIP:죠교대상Ｃ사용 == 2
	CALL SET_USE(MASTER, "Ｐ", TARGET, "입")
	CALL CONDITION_USE("TM안면승마A", MASTER, "Ｐ", TARGET, "입")
ENDIF

;ACTごとのPOSE情報を呼ぶ
;※要修正
;ACTごとにACTABLE、MESSAGE、POSEを収めたファイルにするとかいいと思う。まずは関数化から始めます
TRYCALLFORM MASTER_POSE_ACT{TFLAG:ACT}

;とは言うけど関数化しないほうが設定しやすいんですよねここ…
;以下자세の設定　ぱ。追加部分

;안면승마、밀어넘어짐による強制누움
IF TEQUIP:안면승마 || TEQUIP:안면승마항문 || TEQUIP:밀어넘어지는중 || IS_NOWACTNAME("밀어 넘어트린다")
	CALL SET_POSE(MASTER, "仰向")
	SIF TEQUIP:안면승마 || TEQUIP:안면승마항문
		CALL SET_POSE(TARGET, "앉다", "継続", "上位")
	SIF TEQUIP:밀어넘어지는중 || IS_NOWACTNAME("밀어 넘어트린다")
		CALL SET_POSE(TARGET, "앉다", "대면", "上位")
;성교・성봉系ACTは先に処理
ELSEIF MENU(GET_ACTM(TFLAG:ACT)) == "성교" || MENU(GET_ACTM(TFLAG:ACT)) == "성봉"
	;体位による設定
	SELECTCASE TFLAG:ACT
		;정상위
		CASE 30
			CALL SET_POSE(MASTER, "仰向")
			CALL SET_POSE(TARGET, "앉다", "대면", "上位")
		;후배위、항문섹스
		CASE 31, 35
			CALL SET_POSE(MASTER, "四這")
			CALL SET_POSE(TARGET, "膝立", "背後", "無効")
		;기승위
		CASE 32
			CALL SET_POSE(MASTER, "膝立")
			CALL SET_POSE(TARGET, "仰向", "無効", "下位")
		;대면좌위
		CASE 33
			CALL SET_POSE(MASTER, "앉다")
			CALL SET_POSE(TARGET, "앉다", "대면", "無効")
		;배면좌위
		CASE 34
			CALL SET_POSE(MASTER, "앉다")
			CALL SET_POSE(TARGET, "앉다", "背後", "無効")
		;성교봉사
		;정상위
		CASE 95
			CALL SET_POSE(MASTER, "앉다")
			CALL SET_POSE(TARGET, "仰向", "대면", "下位")
		;후배위、항문섹스
		CASE 96, 99
			CALL SET_POSE(MASTER, "膝立")
			CALL SET_POSE(TARGET, "四這", "前面", "無効")
		;기승위（역강간）
		CASE 103
			CALL SET_POSE(MASTER, "仰向")
			CALL SET_POSE(TARGET, "膝立", "無効", "上位")
		;대면좌위
		CASE 97
			CALL SET_POSE(MASTER, "앉다")
			CALL SET_POSE(TARGET, "앉다", "대면", "無効")
		;배면좌위
		CASE 98
			CALL SET_POSE(MASTER, "앉다")
			CALL SET_POSE(TARGET, "앉다", "前面", "無効")
	ENDSELECT
;성교중
ELSEIF TEQUIP:성교중
	;体位による設定
	SELECTCASE TEQUIP:성교중
		;정상위
		CASE 1
			CALL SET_POSE(MASTER, "仰向")
			CALL SET_POSE(TARGET, "앉다", "대면", "上位")
		;후배위、항문섹스
		CASE 2, 6
			CALL SET_POSE(MASTER, "四這")
			CALL SET_POSE(TARGET, "膝立", "背後", "無効")
		;기승위
		CASE 3
			CALL SET_POSE(MASTER, "膝立")
			CALL SET_POSE(TARGET, "仰向", "無効", "下位")
		;대면좌위
		CASE 4
			CALL SET_POSE(MASTER, "앉다")
			CALL SET_POSE(TARGET, "앉다", "대면", "無効")
		;배면좌위
		CASE 5
			CALL SET_POSE(MASTER, "앉다")
			CALL SET_POSE(TARGET, "앉다", "背後", "無効")
	ENDSELECT
;성교봉사중
ELSEIF TEQUIP:성교봉사중
	;体位による設定
	SELECTCASE TEQUIP:성교봉사중
		;정상위
		CASE 1
			CALL SET_POSE(MASTER, "앉다")
			CALL SET_POSE(TARGET, "仰向", "대면", "下位")
		;후배위、항문섹스
		CASE 2, 6
			CALL SET_POSE(MASTER, "膝立")
			CALL SET_POSE(TARGET, "四這", "前面", "無効")
		;기승위（역강간）
		CASE 3
			CALL SET_POSE(MASTER, "仰向")
			CALL SET_POSE(TARGET, "膝立", "無効", "上位")
		;대면좌위
		CASE 4
			CALL SET_POSE(MASTER, "앉다")
			CALL SET_POSE(TARGET, "앉다", "대면", "無効")
		;배면좌위
		CASE 5
			CALL SET_POSE(MASTER, "앉다")
			CALL SET_POSE(TARGET, "앉다", "前面", "無効")
	ENDSELECT
;ACTごとの자세情報を代入
;ただしCOM次第では変更になる（날뛴다など）
ELSE
	;ACT분류による設定
	SELECTCASE MENU(GET_ACTM(TFLAG:ACT))
		CASE "애무", "도구"
			;どこ를 애무하기ているか
			SELECTCASE CARESS_SPOT(TARGET)
				;Ａ
				CASE 3
					;입でしている
					IF MA_PLAYER(1) == 1
						;すでに누움の場合（難易度高い気がするが）
						IF TFLAG:누움
							CALL SET_POSE(MASTER, "仰向")
							CALL SET_POSE(TARGET, "四這", "無効", "上位")
						;そうでなければ네발로 엎드림
						ELSE
							CALL SET_POSE(MASTER, "四這")
							CALL SET_POSE(TARGET, "四這", "無効", "下位")
						ENDIF
					;손など
					ELSE
						;すでに누움の場合
						IF TFLAG:누움
							CALL SET_POSE(MASTER, "仰向")
							CALL SET_POSE(TARGET, "膝立", "無効", "上位")
						ELSE
							;전회의자세によって보정
							;입と違い、前後・上下の指定はありません
							SELECTCASE TCVAR:MASTER:전회의자세
								;기립・무릎으로 서있다
								CASE 4, 10
									;3/4で継続
									IF RAND:4
										CALL SET_POSE(MASTER, "전회")
										CALL SET_POSE(TARGET, "전회", "전회", "전회")
									;そうでなければ네발로 엎드림
									ELSE
										CALL SET_POSE(MASTER, "四這")
										CALL SET_POSE(TARGET, "膝立", "無効", "下位")
									ENDIF
								;座り
								CASE 2
									;3/4で무릎으로 서있다に변화する
									IF RAND:4
										CALL SET_POSE(MASTER, "膝立")
									;そうでなければ네발로 엎드림
									ELSE
										CALL SET_POSE(MASTER, "四這")
										CALL SET_POSE(TARGET, "膝立", "無効", "下位")
									ENDIF
								;それ以外は네발로 엎드림
								CASEELSE
									CALL SET_POSE(MASTER, "四這")
									CALL SET_POSE(TARGET, "膝立", "無効", "下位")
							ENDSELECT
						ENDIF
					ENDIF
				;Ｃ、Ｖ
				CASE 1, 2
					;성기同士でしている
					IF GROUPMATCH(MC_PLAYER(1), 3, 8) || GROUPMATCH(MV_PLAYER(1), 3, 8)
						;すでに누움の場合
						IF TFLAG:누움
							CALL SET_POSE(MASTER, "仰向")
							CALL SET_POSE(TARGET, "앉다", "대면", "上位")
						;스마타の場合、누움でなければ후배위準拠
						ELSEIF PENIS(MASTER) && MC_PLAYER(1) == 8
							CALL SET_POSE(MASTER, "膝立")
							CALL SET_POSE(TARGET, "四這", "前面", "無効")
						ELSE
							;전회의자세によって보정
							SELECTCASE TCVAR:MASTER:전회의자세
								;누움は継続
								CASE 1
									CALL SET_POSE(MASTER, "仰向")
									CALL SET_POSE(TARGET, "앉다", "대면", "上位")
								;それ以外
								CASEELSE
									;Ｃでイった直後は1/2で누움に변화する
									IF NOWEX:MASTER:Ｃ절정 && RAND:2
										CALL SET_POSE(MASTER, "仰向")
										CALL SET_POSE(TARGET, "앉다", "대면", "上位")
									;そうでなければ座り
									ELSE
										CALL SET_POSE(MASTER, "앉다")
										CALL SET_POSE(TARGET, "앉다", "대면", "無効")
									ENDIF
							ENDSELECT
						ENDIF
					;가슴でしている
					ELSEIF MC_PLAYER(1) == 6 || MV_PLAYER(1) == 6
						;すでに누움の場合
						IF TFLAG:누움
							CALL SET_POSE(MASTER, "仰向")
							CALL SET_POSE(TARGET, "앉다", "대면", "上位")
						ELSE
							;전회의자세によって보정
							SELECTCASE TCVAR:MASTER:전회의자세
								;누움は継続
								CASE 1
									CALL SET_POSE(MASTER, "仰向")
									CALL SET_POSE(TARGET, "앉다", "대면", "上位")
								;それ以外
								CASEELSE
									;Ｃでイった直後は1/2で누움に변화する
									IF NOWEX:MASTER:Ｃ절정 && RAND:2
										CALL SET_POSE(MASTER, "仰向")
										CALL SET_POSE(TARGET, "앉다", "대면", "上位")
									;そうでなければ무릎으로 서있다
									ELSE
										CALL SET_POSE(MASTER, "膝立")
										CALL SET_POSE(TARGET, "仰向", "대면", "下位")
									ENDIF
							ENDSELECT
						ENDIF
					;발でしている
					ELSEIF MC_PLAYER(1) == 7 || MV_PLAYER(1) == 7
						;すでに누움の場合
						IF TFLAG:누움
							CALL SET_POSE(MASTER, "仰向")
							CALL SET_POSE(TARGET, "기립", "대면", "無効")
						ELSE
							;전회의자세によって보정
							SELECTCASE TCVAR:MASTER:전회의자세
								;누움は継続
								CASE 1
									CALL SET_POSE(MASTER, "仰向")
									CALL SET_POSE(TARGET, "기립", "대면", "無効")
								;それ以外
								CASEELSE
									;Ｃでイった直後は1/2で누움に변화する
									IF NOWEX:MASTER:Ｃ절정 && RAND:2
										CALL SET_POSE(MASTER, "仰向")
										CALL SET_POSE(TARGET, "기립", "대면", "無効")
									;そうでなければ座り
									ELSE
										CALL SET_POSE(MASTER, "앉다")
										CALL SET_POSE(TARGET, "앉다", "대면", "無効")
									ENDIF
							ENDSELECT
						ENDIF
					;입でしている
					ELSEIF MC_PLAYER(1) == 1 || MV_PLAYER(1) == 1
						;すでに누움の場合
						IF TFLAG:누움
							CALL SET_POSE(MASTER, "仰向")
							;シックスナインは안면승마に流れているはず
							CALL SET_POSE(TARGET, "앉다", "대면", "無効")
						ELSE
							;전회의자세によって보정
							SELECTCASE TCVAR:MASTER:전회의자세
								;누움
								CASE 1
									;가버려なら3/4で座りに변화する
									IF TCVAR:MASTER:가버려 && RAND:4
										CALL SET_POSE(MASTER, "앉다")
										CALL SET_POSE(TARGET, "앉다", "대면", "無効")
									;1/4で座りに변화する
									ELSEIF !RAND:4
										CALL SET_POSE(MASTER, "앉다")
										CALL SET_POSE(TARGET, "앉다", "대면", "無効")
									;そうでなければ継続
									ELSE
										CALL SET_POSE(MASTER, "仰向")
										CALL SET_POSE(TARGET, "앉다", "대면", "無効")
									ENDIF
								;座り、자유
								CASE 2, 0
									;가버려なら3/4で무릎으로 서있다に변화する
									IF TCVAR:MASTER:가버려 && RAND:4
										CALL SET_POSE(MASTER, "膝立")
										CALL SET_POSE(TARGET, "앉다", "대면", "無効")
									;Ｃでイった直後は1/2で누움に변화する
									ELSEIF NOWEX:MASTER:Ｃ절정 && RAND:2
										CALL SET_POSE(MASTER, "仰向")
										CALL SET_POSE(TARGET, "앉다", "대면", "無効")
									;そうでなければ座り
									ELSE
										CALL SET_POSE(MASTER, "앉다")
										CALL SET_POSE(TARGET, "앉다", "대면", "無効")
									ENDIF
								;네발로 엎드림
								CASE 3
									;3/4で座りに변화する
									IF RAND:4
										CALL SET_POSE(MASTER, "앉다")
										CALL SET_POSE(TARGET, "앉다", "대면", "無効")
									;そうでなければ누움
									ELSE
										CALL SET_POSE(MASTER, "仰向")
										CALL SET_POSE(TARGET, "앉다", "대면", "無効")
									ENDIF
								;기립
								CASE 4
									;Ｃでイった直後は무릎으로 서있다に변화する
									IF NOWEX:MASTER:Ｃ절정
										CALL SET_POSE(MASTER, "膝立")
										CALL SET_POSE(TARGET, "앉다", "대면", "無効")
									;そうでなければ継続
									ELSE
										CALL SET_POSE(MASTER, "기립")
										CALL SET_POSE(TARGET, "膝立", "대면", "無効")
									ENDIF
								;무릎으로 서있다
								CASE 10
									;Ｃでイった直後は座りに변화する
									IF NOWEX:MASTER:Ｃ절정
										CALL SET_POSE(MASTER, "앉다")
										CALL SET_POSE(TARGET, "앉다", "대면", "無効")
									;そうでなければ継続
									ELSE
										CALL SET_POSE(MASTER, "膝立")
										CALL SET_POSE(TARGET, "앉다", "대면", "無効")
									ENDIF
							ENDSELECT
						ENDIF
					;손・도구類など
					ELSE
						;すでに누움の場合
						IF TFLAG:누움
							CALL SET_POSE(MASTER, "仰向")
							CALL SET_POSE(TARGET, "앉다", "대면", "無効")
						ELSE
							;전회의자세によって보정
							;입と違い、前後・上下の指定はありません
							SELECTCASE TCVAR:MASTER:전회의자세
								;누움
								CASE 1
									;가버려なら3/4で座りに변화する
									IF TCVAR:MASTER:가버려 && RAND:4
										CALL SET_POSE(MASTER, "앉다")
									;1/4で座りに변화する
									ELSEIF !RAND:4
										CALL SET_POSE(MASTER, "앉다")
									;そうでなければ継続
									ELSE
										CALL SET_POSE(MASTER, "仰向")
										CALL SET_POSE(TARGET, "앉다", "대면", "無効")
									ENDIF
								;座り、자유
								CASE 2, 0
									;가버려なら3/4で무릎으로 서있다に변화する
									IF TCVAR:MASTER:가버려 && RAND:4
										CALL SET_POSE(MASTER, "膝立")
									;Ｃでイった直後は1/2で누움に변화する
									ELSEIF NOWEX:MASTER:Ｃ절정 && RAND:2
										CALL SET_POSE(MASTER, "仰向")
										CALL SET_POSE(TARGET, "앉다", "대면", "無効")
									;そうでなければ座り
									ELSE
										CALL SET_POSE(MASTER, "앉다")
									ENDIF
								;네발로 엎드림
								CASE 3
									;位置が前でない場合、2/3で後ろから継続
									IF TCVAR:MASTER:위치전후 != 1 && RAND:3
										CALL SET_POSE(MASTER, "四這")
										CALL SET_POSE(TARGET, "앉다", "背後", "無効")
									;そうでなければ座りに변화する
									ELSE
										CALL SET_POSE(MASTER, "앉다")
									ENDIF
								;기립
								CASE 4
									;Ｃでイった直後は무릎으로 서있다に변화する
									IF NOWEX:MASTER:Ｃ절정
										CALL SET_POSE(MASTER, "膝立")
									;そうでなければ継続
									ELSE
										CALL SET_POSE(MASTER, "기립")
									ENDIF
								;무릎으로 서있다
								CASE 10
									;Ｃでイった直後は座りに변화する
									IF NOWEX:MASTER:Ｃ절정
										CALL SET_POSE(MASTER, "앉다")
									;そうでなければ継続
									ELSE
										CALL SET_POSE(MASTER, "膝立")
									ENDIF
							ENDSELECT
						ENDIF
					ENDIF
				;Ｂ
				CASE 4
					;입でしている、or 乳の揉み合い
					IF MB_PLAYER(1) == 1 || TB_PLAYER(0) == 1
						;すでに누움の場合
						IF TFLAG:누움
							CALL SET_POSE(MASTER, "仰向")
							CALL SET_POSE(TARGET, "四這", "無効", "上位")
						ELSE
