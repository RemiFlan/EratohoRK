;-----------------------------------------------------------------------
;MASTERとTARGETの접촉部位を設定する
;-----------------------------------------------------------------------
@TOUCH_SET(ARGS:0, ARGS:1, ARG)
#DIM LCOUNT
#DIM T접촉
#DIM M접촉
#DIM 占有限界
#LOCALSIZE 1
;ARGS:0 TARGETの접촉部位(1=페니스 2=클리토리스 3=指 4=입 5=가슴 6=膣 7=항문 8=발)
;ARGS:1 MASTERの접촉部位(1=페니스 2=클리토리스 3=指 4=입 5=가슴 6=膣 7=항문 8=발)
;ARG 1ならリセットして指定했다접촉を追加する。2なら指定했다접촉を解除する。このとき、ARGS:0・ARGS:1を省略했다らそれぞれすべてを解除する
T접촉 = TOUCH_PART(ARGS:0)
M접촉 = TOUCH_PART(ARGS:1)

;ARGが1の場合、全접촉TEQUIPリセット
IF ARG == 1
	VARSET TEQUIP:MASTER:0, 0, 101, 109
	VARSET TEQUIP:TARGET:0, 0, 101, 109
ENDIF

;ARGが2の場合、省略당했다TEQUIPのリセット
;MASTERの特定の部位と접촉しているTARGETの접촉部位をリセット
IF !T접촉 && M접촉 && ARG == 2
	FOR LCOUNT, 1, 8
		TEQUIP:(100 + LCOUNT) = TEQUIP:(100 + LCOUNT) == M접촉 ? 0 # TEQUIP:(100 + LCOUNT)
	NEXT
	TEQUIP:MASTER:(M접촉+100) = 0
	RETURN 0
;TARGETの特定の部位と접촉しているMASTERの접촉部位をリセット
ELSEIF T접촉 && !M접촉 && ARG == 2
	FOR LCOUNT, 1, 8
		TEQUIP:MASTER:(100 + LCOUNT) = TEQUIP:MASTER:(100 + LCOUNT) == T접촉 ? 0 # TEQUIP:MASTER:(100 + LCOUNT)
	NEXT
	TEQUIP:(T접촉+100) = 0
	RETURN 0
ENDIF

;발は呼ばれると취소する
TEQUIP:접촉발 = 0

;T접촉が不正なら処理中断
SIF T접촉 < 1
	RETURN 0

;指(손)は二本あるので占有限界を2に
IF M접촉 == 3
	占有限界 = 2
;その他の占有限界は1
ELSE
	占有限界 = 1
ENDIF

;全접촉TEQUIPに対して処理
FOR LCOUNT, 1, 8
	;발なら취소する
	SIF TEQUIP:MASTER:(100 + LCOUNT) == 8
		TEQUIP:MASTER:(100 + LCOUNT) = 0
	;TARGETの指定部位が既に使用されていた場合
	IF TEQUIP:MASTER:(100 + LCOUNT) == M접촉
		;解除の場合
		IF ARG == 2
			TEQUIP:MASTER:(100 + LCOUNT) = 0
		;セットの場合
		ELSE
			;占有限界を減算
			占有限界 --
			;新たに加わる指定を含め、限界未満なら접촉解除
			SIF 占有限界 < 1
				TEQUIP:MASTER:(100 + LCOUNT) = 0
		ENDIF
	ENDIF
NEXT

;解除の場合
IF ARG == 2
	TEQUIP:(T접촉+100) = TEQUIP:(T접촉+100) == M접촉 ? 0 # TEQUIP:(T접촉+100)
;セットの場合
ELSE
	;新たに접촉손가락定を加える
	TEQUIP:(T접촉+100) = M접촉
	TEQUIP:MASTER:(M접촉+100) = T접촉
ENDIF

@TOUCH(ARG, ARG:1, ARG:2)
;ARG MASTERの部位を占有中のTARGET:Xの部位(1=페니스 2=클리토리스 3=指 4=입 5=가슴 6=膣 7=항문)
;ARG:1 MASTERの部位(1=페니스 2=클리토리스 3=指 4=입 5=가슴 6=膣 7=항문)
;ARG:2 真なら전턴の履歴を見る
;戻り値 MASTERの部位を占有中のTARGET:Xがいるならそのキャラ번호を返す
;MASTER_POSE(4, 1, 1)なら전턴(第3引数)に誰かがMASTER의 페니스(第2引数)を입(第1引数)で占有していた場合、そのキャラ번호を返す
#FUNCTION
ARG:2 = ARG:2 ? 1 # 0
FOR LOCAL, 1, CHARANUM
	SIF TEQUIP:LOCAL:(100 + ARG + 10 * ARG:2) == ARG:1
		RETURNF LOCAL
NEXT


;-------------------------------------------------
;関数名:TOUCH_PART
;概　要:접촉部位文字列→数値変換関数
;引　数:ARGS:0…접촉部位を表す文字列(部位名か部位번호)
;戻り値:접촉部位を表す数値
;備　考:式中関数
;-------------------------------------------------
@TOUCH_PART(ARGS:0)
#FUNCTION
#LOCALSIZE 1
SELECTCASE ARGS:0
	CASE "Ｐ", "페니스"
		LOCAL:0 = 1
	CASE "Ｃ", "클리토리스"
		LOCAL:0 = 2
	CASE "指", "손"
		LOCAL:0 = 3
	CASE "입", "舌"
		LOCAL:0 = 4
	CASE "Ｂ", "가슴"
		LOCAL:0 = 5
	CASE "Ｖ", "膣"
		LOCAL:0 = 6
	CASE "Ａ", "항문"
		LOCAL:0 = 7
	CASE "발"
		LOCAL:0 = 8
	CASEELSE
		LOCAL:0 = TOINT(ARGS:0)
		LOCAL:0 = INRANGE(LOCAL:0, 1, 8) ? LOCAL:0 # 0
ENDSELECT
RETURNF LOCAL:0
