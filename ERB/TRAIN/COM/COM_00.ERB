SIF !IS_NOWACTNAME("지금 기분을 묻다/자신에게의 마음을 묻다")
	CALL SET_COMGRO("태연하게 한다")
;COM印象
CALL SET_COMIMP("悪印象小")
;의존도변화
CALL ADD_DEPEND(-3, -1)
RETURN 1


;────────────────────────────────────
;006,더 하드하게 해（굴종、징계・포인트）
;────────────────────────────────────
@COM6
;굴종SOURCE増加
SOURCE:MASTER:굴종 += 50 + MARK:MASTER:고통각인 * 20 + GET_ABL(MASTER, "마조끼") * CFLAG:MASTER:죠교레벨 * 2
;この恥知らずのメス豚め！とか言いながら징계・になります
LOCAL = BASE:초조함 / 100 + TALENT:새드 * 3 + TALENT:심술궂음 * 5 - TALENT:마음씨착한 * 5 - MARK:굴복각인 - CFLAG:아라이멘도 / 10 + RAND:5
IF LOCAL > 0
	;징계・포인트加算
	TFLAG:징계・포인트 += LOCAL
	;派生：「この恥知らずのメス豚め！」
	TFLAG:REACT파생 = 1
ELSE
	;派生：「ふーん」
	TFLAG:REACT파생 = 0
ENDIF
CALL SET_COMGRO("受け入れる")
;COM印象
CALL SET_COMIMP("0から遠ざかる")
;의존도변화
CALL ADD_DEPEND(0, +3)
RETURN 1
;快SOURCEに応じてREACTION_MESSAGEで分岐시킨다なら、REACT파생にも反映시킨다べき気がする
;条件そのまま書けば参照可能だが、そういう問題ではないと考えます@/L

;────────────────────────────────────
;007,용서를 빌다（굴종、공포、애원、징계・포인트）
;────────────────────────────────────
@COM7
;굴종、공포SOURCE増加
SOURCE:MASTER:굴종 += 200 + MARK:굴복각인 * MARK:MASTER:트라우마 * 10
SOURCE:MASTER:공포 += SOURCE:MASTER:고통 / 3 + SOURCE:MASTER:구속 / 5 + SOURCE:MASTER:이탈 / 4 + SOURCE:MASTER:트라우마 / 3
;意見を出すなんていい度가슴だね！とか言いながら징계・になります
LOCAL = BASE:초조함 / 80 - BASE:이성 / 100 - CFLAG:아라이멘도 / 10 + PALAM:MASTER:반항 / 1000 + TALENT:새드 * 5 + TALENT:심술궂음 * 5 - TALENT:마음씨착한 * 5 - MARK:MASTER:트라우마 / 2
SIF IS_POLICY("今", "이상")
	LOCAL += RAND:7
;COM印象が共通なのは納得いかなかったのでを派生毎に別ける@/L
IF LOCAL > 0 && !IS_NOWACTNAME("공중육변기플레이")
	;징계・포인트加算
	TFLAG:징계・포인트 += LOCAL
	;派生：「意見を出すなんていい度가슴だね！」
	TFLAG:REACT파생 = 1
	;COM印象
	CALL SET_COMIMP("0から遠ざかる")
ELSE
	;派生：「ふーん」
	TFLAG:REACT파생 = 0
	;COM分類
	CALL SET_COMGRO("용서를 빌다")
	;COM印象
	CALL SET_COMIMP("0に近づく")
ENDIF
;의존도변화
CALL ADD_DEPEND(0, +2)
RETURN 1


