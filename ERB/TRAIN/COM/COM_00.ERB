IF LOCAL > 0
	;징계・포인트加算
	TFLAG:징계・포인트 += LOCAL
	;派生：「この恥知らずのメス豚め！」
	TFLAG:REACT파생 = 1
ELSE
	;派生：「ふーん」
	TFLAG:REACT파생 = 0
ENDIF
;COM分類
CALL SET_COMGRO("受け入れる")
;COM印象
CALL SET_COMIMP("0から遠ざかる")
;의존도변화
CALL ADD_DEPEND(+2, +1)
