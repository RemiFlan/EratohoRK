;━━━━━━━━━━━━━━━━━━━━━━━━
IF 구상記入チェック(0) && ARG >= 1000 && (ARG % 10) == 1
ENDIF

;━━━━━━━━━━━━━━━━━━━━━━━━
;죠교대상が恥ずかしがって着替えられない
;━━━━━━━━━━━━━━━━━━━━━━━━
IF 구상記入チェック(0) && ARG >= 1000 && (ARG & 10) == 2
ENDIF

;━━━━━━━━━━━━━━━━━━━━━━━━
;죠교대상が嫌がって着替えられない
