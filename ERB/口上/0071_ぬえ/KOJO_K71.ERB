;--------------------------------------------------
;ARG = キャラNO が손持ちに居るかどうか調べる関数
;--------------------------------------------------
@FRIEND(ARG)
#FUNCTION
SIF GETCHARA(ARG, 1) > 0
	RETURNF 1
RETURNF 0

;--------------------------------------------------
;色振り分け関数 随時適用していきたい
;--------------------------------------------------
@F_COLOR(ARGS)
SELECTCASE ARGS
	CASE IS == "누에"
	SETCOLOR 221,160,221
	CASE IS == "코이시"
	SETCOLOR 0xCCFFFF
	CASE IS == "플랑"
	SETCOLOR 255,64,64
	CASE IS == "星"
	SETCOLOR 240,240,64
	CASE IS == "聖"
	SETCOLOR 255,224,255
ENDSELECT

