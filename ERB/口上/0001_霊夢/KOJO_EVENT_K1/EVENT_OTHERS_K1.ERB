;========================================================================
;EV16, 대만족보너스구상
;========================================================================
;・@EVENTTRAINから呼び出される
;・대만족보너스を得ている場合、죠교開始時に表示される
;・タイミングは죠교開始구상(EV11)の後、죠교자행동前구상(EV12)の前
;-------------------------------------------------
@KOJO_EVENT_K1_16(ARG)
;-------------------------------------------------
;引数内訳…
;ARG=(0.선택前/1.선택後)
;-------------------------------------------------
;────────────────────────────────────
;선택前구상
;────────────────────────────────────
;・上機嫌な様子で、금일は何を당했다いかとたずねる
;・구상表示前に地の文(%CALLNAME:TARGET%님 대만족 보너스)
;・구상表示の後に地の文(%CALLNAME:TARGET%は上機嫌な様子で、금일は何を당했다いかとたずねてきた)が続く
;・地の文の後に선택肢が表示される
;-------------------------------------------------
;━━━━━━━━━━━━━━━━━━━━━━━━
;대만족보너스선택前
;━━━━━━━━━━━━━━━━━━━━━━━━
IF 구상記入チェック(100) && ARG == 0
	;=================================================
	;처음
	;=================================================
	IF 구상記入チェック(100) && FIRSTEVENT(0)
		;선택肢で止まるのでWをLに変更
		PRINTFORML 「이제, 조금씩 익숙해지는 걸까？」
		PRINTFORML 「니가 좋아하는 일, 해줄게」
		RETURN 1
	ENDIF
	;=================================================
	;기타・조건없음
	;=================================================
	IF 구상記入チェック(100)
		;처음に移転
		PRINTFORML 「 나는 만족했으니까」
		PRINTFORML 「이번엔 니가 좋아하는 걸 해줄게」
		RETURN 1
	ENDIF
ENDIF

;────────────────────────────────────
;선택後구상
;────────────────────────────────────
;・죠교대상の返答に対して、一言
;・구상表示に後に地の文(%CALLNAME:TARGET%は%CALLNAME:MASTER%의 返事を聞くと죠교の準備を始めた)が続く
;・上記の地の文を表示했다後に、선택肢毎の地の文が表示される
;・휴식が선택당했다場合はEV12, ご褒美による中止に続く
;-------------------------------------------------
;━━━━━━━━━━━━━━━━━━━━━━━━
;대만족보너스선택後
;━━━━━━━━━━━━━━━━━━━━━━━━
IF 구상記入チェック(100) && ARG == 1
	;=================================================
	;언제나처럼
	;=================================================
	IF 구상記入チェック(100) && IS_POLICY("금일", "통상")
		PRINTFORMDW %CALLNAME:TARGET%는 살짝 어이없는 표정으로 되묻는다
		PRINTFORML
		PRINTFORML 「너… 그 거 「무엇을 먹고 싶다？」라고 물었는데 「뭐든지 좋다」라고 대답하는 거라구」
		PRINTFORML 「수동적인것도 이정도면 병이네」
		RETURN 1
	ENDIF
	
	;=================================================
	;항문을괴롭혀
	;=================================================
	IF 구상記入チェック(100) && IS_POLICY("금일", "항문")
		PRINTFORMW 「이 변태.」
		PRINTFORML 「뭐 좋아요… \@ TALENT:MASTER:남자 ? 너의 몸, 여자아이처럼 만들어 줄게 #  \@」
		RETURN 1
	ENDIF
	
	;선택する事によって(TFLAG:징계・플래그)が立つ
	;=================================================
	;징계해
	;=================================================
	IF 구상記入チェック(100) && IS_POLICY("금일", "징계・")
		;자위させられて가버려되었다ら역강간大好きです
		PRINTFORML 「차라리 강간해달라는 거구나」
		;実際にしてくれるかは状況次第なのではぐらかす
;OriginalString : 아웃8, "「うん。まあ、その」")
		CALL FADEOUT(8, "「응. 뭐, 그」")
		PRINTFORML 「생각해 둘게」
		RETURN 1
	ENDIF
	
	;=================================================
	;격렬하게
	;=================================================
	IF 구상記入チェック(100) && IS_POLICY("금일", "하드")
		PRINTFORML 「무리하게 범해지고 싶다는 거구나」
		PRINTFORML 「마음내키면 해 줄게」
		RETURN 1
	ENDIF
	
	;=================================================
	;응석부리게
	;=================================================
	IF 구상記入チェック(100) && IS_POLICY("금일", "イチャイチャ")
		;大抵부끄러워한다/하드にしての二択になるのが키스の現状
		;항문責めされる/ご봉사파이즈리/イラマさせられる状況は発生しうる
		IF !RAND:4
			PRINTFORMW 「어떻게 하지？」
			PRINTFORMDL %CALLNAME:TARGET%는 %CALLNAME:MASTER%의 무릎에 허리를 내려 응석부려 왔다
			PRINTFORML 「좋아, 내가 기분이 내키면.」
			PRINTFORML 어깨 너머로 보이는 레이무의 뺨은, 붉다.
		ELSEIF !RAND:3
;OriginalString : 아웃8, "なでなで")
			CALL FADEOUT(8, "스윽스윽")
			PRINTFORMW 「네~ 끝」
			PRINTFORMDW %CALLNAME:TARGET%는 조교를 끝맺으려고 했다
			PRINTFORML 「 좀 더？」
;OriginalString : 아웃6, "くすっ")
			CALL FADEOUT(6, "키득")
			PRINTFORML 「네 네」
		ELSEIF !RAND:2
			PRINTFORMDW %CALLNAME:TARGET%는 %CALLNAME:MASTER%의 무릎에 허리를 내려 왔다
			PRINTFORML 「응」
		ELSE
			;甘味が強い為改善
			PRINTFORML 「좋아」
			PRINTFORMDW %CALLNAME:TARGET%는 %CALLNAME:MASTER%의 뺨에 입술을 대어 왔다
			PRINTFORMW 「%RAND_SPLIT("가득./잔뜩")% 사랑합시다」
			PRINTFORM 「
			CALL HEARTBW
			PRINTFORML 
		ENDIF
		RETURN 1
	ENDIF
	
	;=================================================
	;망가질때까지
	;=================================================
	IF 구상記入チェック(100) && IS_POLICY("금일", "이상")
		PRINTFORMW 「바보」
		PRINTFORML 「네가 망가지면 곤란한 것은……」
		RETURN 1
	ENDIF
	
	;개목걸이の所持が条件
	;=================================================
	;밖에서해
	;=================================================
	IF 구상記入チェック(0) && IS_POLICY("금일", "야외")
		RETURN 1
	ENDIF
	
	;호의+호감도が10000以上で可能になる
	;=================================================
	;임신해
	;=================================================
	IF 구상記入チェック(100) && IS_POLICY("금일", "애만들기")
		PRINTFORMDW %CALLNAME:TARGET%에게 임신해달라고 고하면, %CALLNAME:TARGET%는 흥분해 몸을 떨었다
		PRINTFORM 「좋아요. 너의 아기 낳아 준다
		CALL HEARTBW
		IF TALENT:Ｖ민감 == 0
			PRINTFORMDW %CALLNAME:TARGET%는 일시적으로 [Ｖ민감]을 얻었다
			PRINTFORML
			TALENT:Ｖ민감 = 1
		ENDIF
		RETURN 1
		;文字の綺麗な여자というステータス 愛液で落ちる為必中ではない筆誅
		;PRINTFORMDL %CALLNAME:TARGET%は%CALLNAME:MASTER%의 陰茎にすらすらと毛筆を走らせた
		;PRINTFORML 「これ？Ａ装備よ」
		;PRINTFORMDW %CALLNAME:MASTER%は一時的に[追尾]を得た
	ENDIF
	
	;죠교대상の소모に関わらず선택可能
	;=================================================
	;쉬게
	;=================================================
	IF 구상記入チェック(100) && IS_POLICY("금일", "휴식")
		SELECTCASE TIME
			;昼
			CASE 0
				PRINTFORMW 「좋아。지금 차를 가져올게」
				PRINTFORML
				PRINTFORMDL 조르륵…
				PRINTFORMW 후룩…
				PRINTFORML 
				PRINTFORML
				PRINTFORMW 「흠。이게 제일 진정되네」
			;夜
			CASEELSE
				PRINTFORMW 「좋아요. 그런데…」
				PRINTFORMW 「이군요？오늘의 더운 물은 , 무엇인가 먹고 싶은 것 있는 것일까？」
				PRINTL
				PRINTFORMDL [0] 된장국
				PRINTFORMDL [1] 고기감자조림
				PRINTFORMDL [2] 스키야키
				PRINTFORMDL [3] %CALLNAME:TARGET%
				PRINTFORMDL [4] 밖에서 먹고 싶다
				PRINTFORMDL [5] 죽
				PRINTFORMDL [6] 너의 요리는 먹고 싶지 않다
				CALL INPUTINT(0, 1, 2, 3, 4, 5, 6)
				SELECTCASE RESULT
					CASE 0
						PRINTFORMW 「좋아。%CALLNAME:MASTER%(을)를 위해、된장국 만들어 줄게」
						PRINTFORMDL 
						PRINTFORMDL …
						PRINTFORMDL ……
						PRINTFORMDL ………
						PRINTFORML 
						PRINTFORMDL 쩝쩝
						PRINTFORML 
						;ここでズゾゾするのは당신だけで十分
						;레이무の分のズゾゾを入れるとするならば、딸や스이카やこころちゃんでちゃぶ台がにぎやかになっていく描写。もしくはその後の食事描写も欲しくなる。
					CASE 1
						PRINTFORMW 「좋아. 고기감자네」
						PRINTFORMDW 취사장에 서 있는 %CALLNAME:TARGET%의 뒷모습을 바라보면서 %CALLNAME:MASTER%(은)는 휴식을 취했다…
					CASE 2
						;巫女さんに和弓
						PRINTFORMW 「좋아요. 스키야키군요」
						PRINTFORML
						PRINTFORMW 「고기가 없네…… 새고기도 괜찮지？」
						PRINTFORMDL %CALLNAME:TARGET%는 활을 꺼내 밖으로 나가고, 잠시 후 들새를 잡아 돌아왔다
						PRINTFORMDW 무녀에게 활… 그런 것도 있는 것인가
					CASE 3
						PRINTFORMW 「%RAND_SPLIT("이 색마/호색가/바보")%」
						PRINTFORML
						PRINTFORMDW 그날 밤의 식탁에는 정력에 좋은 요리뿐이였다
						PRINTFORMDL %CALLNAME:TARGET%는 소매로 입가를 숨기면서 %CALLNAME:MASTER%의 모습을 보고 있다
					CASE 4
						PRINTFORMW 「그렇구나…가끔 씩은 밖에서 먹을까요」
						PRINTFORMDL %CALLNAME:TARGET%는 밖에 있는 내내 %CALLNAME:MASTER%(와)과 팔짱을 꼈다
						PRINTFORML
						PRINTFORML 「도망치지 않도록 하는 것일 뿐이야」
					CASE 5
						PRINTFORMW 「어디 아프기라도 한거야？」
						PRINTFORMW 「그렇게까지 쉬고 싶은 걸까…」
						;ご飯抜きにはしない。休み描写に対応する為描写追加
						PRINTFORML
						PRINTFORMDW 그 날의 저녁식사는 닭죽이었다
					CASE 6
						PRINTFORMDW %CALLNAME:MASTER%의 자그마한 저항은 의미없었다
						PRINTFORML
						PRINTFORMDL 그 날의 저녁식사는 날달걀보리밥이었다
				ENDSELECT
		ENDSELECT
		RETURN 1
	ENDIF
ENDIF

;========================================================================
;EV17, 本日の방침구상
;========================================================================
;・@EVENTTRAINから呼び出される
;・タイミングは죠교開始구상(EV11)の後、죠교자행동前구상(EV12)の前
;・대만족보너스を得ている場合はそちらが우선される(即ち、この箇所が呼び出される事はない)
;・죠교자により本日の방침が決定당했다場合に表示
;・구상表示の後にPRINTLを挟んで地の文。地の文は방침毎に専用のものになる
;・애만들기、휴식はご褒美でしか出ないのでこの箇所では不要
;・Ａ감각が4までは確率（Ａ감각、0で1/3）でTFLAG:금일의방침 == 1（Ａ開発）になり1/5の確率で他の방침によって上書きされる
;・Ａ감각が5以降になると금일의방침 == 1（Ａ開発）になる可能性は無くなる（감각が上昇すればＡ開発の필요はない、という仕様？）
;-------------------------------------------------
@KOJO_EVENT_K1_17(ARG)
;-------------------------------------------------
;引数内訳…
;ARG=(現状、派生なし)
;-------------------------------------------------

;一行空ける(この손の処理は最終的にはシステム側で賄いたいと考える)
PRINTL

;ABL:MASTER:Ａ감각 < 5の条件の時のみ発生する可能性がある
;Ａ감각の上昇に伴い発生確率が落ちてゆき（0=1/3, 1=1/4, 2=1/6. 3=1/8. 4=1/12。さらに1/5で他の방침で上書き）、Ａ감각5以上では完全に発生しなくなる
;━━━━━━━━━━━━━━━━━━━━━━━━
;방침が항문開発
;━━━━━━━━━━━━━━━━━━━━━━━━
IF 구상記入チェック(0) && IS_POLICY("금일", "항문")
	PRINTFORML 
	RETURN 1
ENDIF

;━━━━━━━━━━━━━━━━━━━━━━━━
;방침が징계・
;━━━━━━━━━━━━━━━━━━━━━━━━
IF 구상記入チェック(0) && IS_POLICY("금일", "징계・")
	PRINTFORML 
	RETURN 1
ENDIF

;━━━━━━━━━━━━━━━━━━━━━━━━
;방침がいつもより激しく
;━━━━━━━━━━━━━━━━━━━━━━━━
IF 구상記入チェック(100) && IS_POLICY("금일", "하드")
	PRINTFORML 「응. 그렇구나, 이번은…」
	PRINTFORM 「
	;こちらは새드巫女の考える酷い事なのでピンク文字
	IF TALENT:새드
		PRINTFORMD 심한 일.
		PRINTFORML 해 준다」
	;こちらは당신にとっての酷い事なので白文字
	ELSE
		PRINTFORML 심한 일. 해 준다」
	ENDIF
	;夜
	;人間で生딸な레이무さんによる精一杯のさでずむ。明かりを消してあげない。勿論레이무さんの方が恥ずかしい。
	SIF TIME
		PRINTFORMDL %CALLNAME:TARGET%는 빛도 끄지 않고 행위를 개시했다…
	RETURN 1
ENDIF

;━━━━━━━━━━━━━━━━━━━━━━━━
;방침がイチャイチャ
;━━━━━━━━━━━━━━━━━━━━━━━━
IF 구상記入チェック(100) && IS_POLICY("금일", "イチャイチャ")
	PRINTFORML 「뭐야…가끔 씩은 끈적끈적 히다하고 싶어져」
	RETURN 1
ENDIF

;━━━━━━━━━━━━━━━━━━━━━━━━
;방침が이상
;━━━━━━━━━━━━━━━━━━━━━━━━
IF 구상記入チェック(0) && IS_POLICY("금일", "이상")
	PRINTFORML 
	RETURN 1
ENDIF

;━━━━━━━━━━━━━━━━━━━━━━━━
;방침が야외
;━━━━━━━━━━━━━━━━━━━━━━━━
IF 구상記入チェック(0) && IS_POLICY("금일", "야외")
	PRINTFORML 
	RETURN 1
ENDIF
