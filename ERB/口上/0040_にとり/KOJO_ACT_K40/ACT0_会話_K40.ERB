			ENDSELECT
		ENDIF
		RETURN 1
	ENDIF
	
	;=================================================
	;성교系で질내사정의後
	;=================================================
	IF 구상記入チェック(100) && TFLAG:전회질싸 == 1
		;아라이멘도正
		IF ALI(0)
			SELECTCASE RANDACT(3, 2)
				CASE 0
