;-------------------------------------------------
;선택肢を表示する関数(最大8つまで)
;선택당했다선택肢の번호を戻り値として返す(0～7)
;-------------------------------------------------
@FUNC_K13_ASK(ARGS:0, ARGS:1, ARGS:2, ARGS:3, ARGS:4, ARGS:5, ARGS:6, ARGS:7)
#DIM cur_redraw
#DIM count_i
#DIM max_select

max_select = 0
FOR count_i, 0, 8
	IF ARGS:count_i != ""
;OriginalString : @"[{count_i}] - %ARGS:count_i%", count_i
		PRINTBUTTON @"[{count_i}] - %ARGS:count_i%", count_i
;OriginalString : 
		PRINTL 
		max_select ++
	ELSE
		BREAK
	ENDIF
NEXT

IF max_select <= 0
	RETURN 0
ENDIF

cur_redraw = CURRENTREDRAW()

$INPUT_LOOP
INPUT

REDRAW 0

IF RESULT >= 0 && RESULT < max_select
	REDRAW cur_redraw
	RETURN RESULT
ENDIF
GOTO INPUT_LOOP

