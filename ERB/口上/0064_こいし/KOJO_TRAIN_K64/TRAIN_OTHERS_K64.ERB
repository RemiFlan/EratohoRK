;────────────────────────────────────
;EV21, 大만족구상
;────────────────────────────────────
;・죠교자の대만족보너스を취득했다場合に表示
;-------------------------------------------------
;=================================================
@KOJO_EVENT_K64_21(ARG)
;=================================================
;━━━━━━━━━━━━━━━━━━━━━━━━━
;코이시さま大만족
;━━━━━━━━━━━━━━━━━━━━━━━━━
IF 구상記入チェック()
	;=================================================
	;상냥하게 응답한다
	;=================================================
	IF 구상記入チェック(0) && IS_NOWCOMNAME("상냥하게 응답한다")
		PRINTFORMW 
		RETURN 1
	ENDIF
	
	;=================================================
	;쾌감을 받아들인다/기분 좋다!
	;=================================================
	IF 구상記入チェック(0) && IS_NOWCOMNAME("쾌감을 받아들인다/기분 좋다!")
		PRINTFORMW 
		RETURN 1
	ENDIF
	
	;=================================================
	;안에 내!
	;=================================================
	IF 구상記入チェック(0) && IS_NOWCOMNAME("안에 내!")
		;分岐が필요だわ…とりあえず後で
		;どっちに出して欲しいのか、사정했다のか、量はどうなのか
		CALL HTMLPRINTW(@"「후우…%K64_SYMBOL("BHeartW")%」")
		PRINTFORMW 「%K64_CNAME()%의 보지, 대단히 기분 좋았어요♪」
		RETURN 1
	ENDIF
	
	;=================================================
	;비명지른다
	;=================================================
	IF 구상記入チェック() && IS_NOWCOMNAME("비명지른다")
		PRINTFORMW 「지금의 울음 소리, 대단히 좋았어요」
		PRINTFORMW 「 나, 코훈 해 버렸다♪」
		RETURN 1
	ENDIF
	
	;=================================================
	;애정을 담아 한다
	;=================================================
	IF 구상記入チェック() && IS_NOWCOMNAME("애정을 담아 한다")
		CALL HTMLPRINTW(@"「와-이♪ 아래층-응%K64_SYMBOL("BHeartW")%」")
		RETURN 1
	ENDIF
	
	;SELECTCOM == 15は上層で処理
	;=================================================
	;REACT분류が적극적으로 한다(적극적으로 한다、이루는대로等)
	;=================================================
	IF 구상記入チェック(0) && IS_COMGRONAME("적극적으로 한다/受け入れる")
		PRINTFORMW 
		RETURN 1
	ENDIF
	
	;---------------------------------------------
	;その他を処理
	;---------------------------------------------
	SELECTCASE RANDEVENT(2, 0)
		CASE 0
			PRINTFORMW 「이건이나 보고 다해가 되어 버리는군」
		CASEELSE
			PRINTFORMW 「응, 좋은 느낌이군요♪」
			PRINTFORMW 「후후,%K64_CNAME()%도 나의 기쁘게 하는 방법을 알아 왔는지 해들♪」
	ENDSELECT
	RETURN 1
ENDIF


