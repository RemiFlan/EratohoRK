;━━━━━━━━━━━━━━━━━━━━━━━━
IF 구상記入チェック(0) && TFLAG:강제탈의 && ZENRACHECK(1)
	;죠교대상이남자
	IF TALENT:MASTER:남자
	;죠교대상が후타나리
	ELSEIF TALENT:MASTER:후타나리
	;죠교대상が女
	ELSE
	ENDIF
